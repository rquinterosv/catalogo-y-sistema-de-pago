<p id="notice"><%= notice %></p>

<h1>Products</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.price %></td>
        <td><%= link_to 'Show', shop_path(product) %></td>


        <td>
            <%= form_for @order_item do |f|%>
            <%= f.hidden_field :product_id, :value => product.id %>
            <%= f.number_field :quantity, :value => 1, :min => 1%>
            <%= f.submit "Agregar al carro"%>
            <% end%>
        </td>

      </tr>
    <% end %>
  </tbody>
</table>

<br>


<%= link_to "#{current_order.order_items.size} items con el valor de: $", cards_path%>